<section class="session container">
  <div class="columns">
    <div class="column">
      <%= image_pack_tag 'media/images/animals/c2.jpg' %>
    </div>

    <div class="column">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, '電子信箱', class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
      </div>

      <div class="field">
        <%= f.label :password, '密碼', class: 'label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'checkbox' %>
          <%= f.label :remember_me, "記得我" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "登入", class: 'button is-primary is-fullwidth' %>
      </div>
    <% end %>
    <br />
    <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
